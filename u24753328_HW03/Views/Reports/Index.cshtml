@model u24753328_HW03.Models.ReportIndexViewModel
@{
    ViewBag.Title = "Sales & Staff Reports";
}

<h2><i class="glyphicon glyphicon-stats"></i> Sales & Staff Reports</h2>
<hr />

@if (TempData["Message"] != null)
{
    <p class="alert alert-info">@TempData["Message"]</p>
}

<div class="row">
    <div class="col-md-5">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">🏆 Staff Performance Ranking </h3>
            </div>
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.StaffRanking.FirstOrDefault().Rank)</th>
                        <th>@Html.DisplayNameFor(model => model.StaffRanking.FirstOrDefault().StaffName)</th>
                        <th>@Html.DisplayNameFor(model => model.StaffRanking.FirstOrDefault().TotalUnitsSold)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model.StaffRanking)
                    {
                        <tr>
                            <td><span class="label label-primary">@staff.Rank</span></td>
                            <td>@staff.StaffName</td>
                            <td>@staff.TotalUnitsSold</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-7">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">📊 Best Seller Ranking by Brand Revenue (Year 2018)</h3>
            </div>
            <div class="panel-body">
                <canvas id="brandSalesChart" height="370"></canvas>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Save Generated Report</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("SaveReport", "Reports", FormMethod.Post, new { id = "saveReportForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-xs-2">
                            <div class="form-group">
                                <label for="fileName">Report File Name:</label>
                                <input type="text" id="fileName" name="fileName" class="form-control" required placeholder="e.g., Staff_Q3_2019">
                            </div>
                        </div>

                        <div class="col-xs-2">
                            <div class="form-group">
                                <label for="fileType">Select File Type:</label>
                                <select id="fileType" name="fileType" class="form-control" required>
                                    <option value="">-- Choose Type --</option>
                                    <option value="PDF">PDF Document</option>
                                    <option value="Excel">Excel Spreadsheet</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block"><i class="glyphicon glyphicon-save"></i> Save Report</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <h3>📁 Document Archive</h3>
      
        @if (Model.DocumentArchive != null && Model.DocumentArchive.Any())
        {
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th style="width: 20%;">Filename</th>
                        <th>Type</th>
                        <th>Date Saved</th>
                        <th style="width: 30%;">Description (Bonus)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model.DocumentArchive)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => report.FileName)</td>
                            <td>@Html.DisplayFor(modelItem => report.FileType)</td>
                            <td>@Html.DisplayFor(modelItem => report.DateSaved)</td>
                            <td>
                                <div class="description-container" data-report-id="@report.Id">
                                    <textarea id="desc-editor-@report.Id" class="rich-text-area form-control" rows="3">@Html.Raw(report.Description)</textarea>
                                    <button class="btn btn-xs btn-warning save-desc-btn mt-1" data-report-id="@report.Id">Save</button>
                                </div>
                            </td>
                            <td>
                                <a href="@Url.Action("DownloadReport", "Reports", new { id = report.Id })" class="btn btn-sm btn-primary">
                                    <i class="glyphicon glyphicon-download-alt"></i>
                                </a>
                                @using (Html.BeginForm("DeleteReport", "Reports", FormMethod.Post, new { style = "display:inline;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@report.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this report?')">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No reports have been archived yet.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@0.7.0"></script>
    <script src="https://cdn.jsdelivr.net/npm/tinymce@5.10.7/tinymce.min.js"></script>

    <script>
        $(document).ready(function () {


            if (window.Chart && window.ChartDataLabels) {
                try {
                    Chart.plugins.register(ChartDataLabels);
                } catch (e) {
                    console.error("Failed to register ChartDataLabels plugin:", e);
                }
            } else {
                console.warn("Chart.js or ChartDataLabels is missing. Cannot register plugin.");
            }
            
            Chart.defaults.global.responsive = true;



            var chartData;
            try {
               
                chartData = @Html.Raw(Json.Encode(Model.BrandSalesData));
            } catch (e) {
                console.error("JSON Parsing Error for BrandSalesData (Check data integrity):", e);
                chartData = [];
            }

            
            if (!chartData || chartData.length === 0) {
                console.warn("Chart data is empty. Cannot draw chart.");
               
                $('#brandSalesChart').replaceWith('<p class="text-danger">No Sales Data available for the selected year.</p>');
                return;
            }

           
            var labels = chartData.map(function(item) { return item.BrandName; });
            var data = chartData.map(function(item) { return item.TotalRevenue; });

            console.log("Chart Labels (Final Check):", labels);
            console.log("Chart Data Values (Final Check):", data);

            
            var ctx = document.getElementById('brandSalesChart');
            if (ctx) {
                 new Chart(ctx.getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Total Revenue ($)',
                            data: data,
                            backgroundColor: 'rgba(75, 192, 192, 0.6)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        
                        responsive: true,
                        maintainAspectRatio: false, 
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true,
                                    callback: function(value) { return '$' + value.toLocaleString(); }
                                }
                            }]
                        },
                        legend: { display: false },
                        title: { display: true, text: 'Best Seller Ranking by Brand Revenue (2018)' },
                        plugins: {
                            datalabels: {
                                anchor: 'end',
                                align: 'top',
                                formatter: function(value, context) {
                                    return '$' + Math.round(value).toLocaleString();
                                },
                                color: '#333',
                                font: { weight: 'bold' }
                            }
                        }
                    }
                });
            } else {
                console.error("Canvas element 'brandSalesChart' not found.");
            }



            //  (BONUS MARKS) 
            tinymce.init({
                selector: '.rich-text-area',
                menubar: false,
                toolbar: 'bold italic underline | bullist numlist',
                plugins: 'autoresize',
                autoresize_bottom_margin: 5,
                height: 100
            });

            $('.save-desc-btn').click(function () {
                var button = $(this);
                var reportId = button.data('report-id');
                var editorId = 'desc-editor-' + reportId;
                var newDescription = tinymce.get(editorId).getContent();

                button.text('Saving...').prop('disabled', true);

                $.post('@Url.Action("UpdateReportDescription", "Reports")', {
                    id: reportId,
                    description: newDescription,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                }, function (data) {
                    if (data.success) {
                        button.text('Saved!');
                        setTimeout(function() { button.text('Save'); }, 1500);
                    } else {
                        alert('Error saving description: ' + data.message);
                        button.text('Save');
                    }
                }).always(function() {
                    button.prop('disabled', false);
                });
            });
        });
    </script>
}