<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Take the Streets. BikeStore</title>



    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap.min.css")" />

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")



    <style>

        .hero-image-banner {
        
            background: url('/Content/Images/background.jpg') no-repeat center center;
            background-size: cover;
            min-height: 100vh;
            position: relative;
            padding: 0;
            padding-top: 56px;
        }


            .hero-image-banner::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.55);
                z-index: 1;
            }

        .overlay-content {
            position: relative;
            z-index: 2;
        }

        .text-shadow {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.9);
        }

        .tech-footer {
            font-size: 1.1em;
        }
    </style>

</head>

<body>



    <div class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">

        <div class="container">

            @Html.ActionLink("BikeStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-warning fw-bolder" })



            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">

                <span class="navbar-toggler-icon"></span>

            </button>



            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav ms-auto">

                    <li class="nav-item">@Html.ActionLink("Products", "Index", "Products", null, new { @class = "nav-link" })</li>

                    <li class="nav-item">@Html.ActionLink("Staff", "Index", "Staffs", null, new { @class = "nav-link" })</li>

                    <li class="nav-item">@Html.ActionLink("Customers", "Index", "Customers", null, new { @class = "nav-link" })</li>

                    <li class="nav-item">@Html.ActionLink("Reports", "Index", "Reports", null, new { @class = "nav-link" })</li>

                </ul>

            </div>

        </div>

    </div>



    <div class="body-content">

        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>

</html>
