@model u24753328_HW03.Models.staff

@using (Html.BeginForm("Delete", "Staffs", FormMethod.Post, new { id = "deleteStaffForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.staff_id)

    <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">Confirm Deletion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">
        <p class="lead">
            Are you sure you want to delete the staff member:
            <strong>@Model.first_name @Model.last_name</strong> (ID: @Model.staff_id)?
        </p>
        <p class="text-danger">This action cannot be undone.</p>
    </div>

    <div class="modal-footer">
        @* Applied btn-gold style for the secondary action (Cancel) *@
        <button type="button" class="btn btn-gold" data-dismiss="modal">Cancel</button>

        @* Applied custom danger style for the primary destructive action *@
        <button type="submit" class="btn btn-action-danger">Confirm Delete</button>
    </div>
}

